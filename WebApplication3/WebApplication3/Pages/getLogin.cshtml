@page
@model getLoginModel
@{
  ViewData["Title"] = "Login";
}

<div class="container">  
    <h2>Login</h2>  
    <hr />  
    <br />  
    <b>@Model.message</b>
		<form action="login" method="get">
				
        <div class="row">  
            <div class="col-md-4">  
                <label>Email:</label>  
                <input asp-for="_email" class="form-control" />  
            </div>  
        </div>
        <div class="row">
            <div class="col-md-4">
                <label>Password:</label>
                <input asp-for="_password" class="form-control" type="password"/>
            </div>
        </div>
				
        <br />  
        <input type="submit" value="Login" class="btn btn-primary" />  				
    </form>
    <p>Don't have an account? <a href="signup">Sign up here!</a></p>
</div>

